{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": "./", 
    "paths": {
      "@entities/*": [
        "./src/entities/*"
      ],
      "@adapters/*": [
        "./src/adapters/*"
      ],
      "@shared/*": [
        "./src/shared/*"
      ],
      "@useCases/*": [
        "./src/useCases/*"
      ],
      "@external/*": [
        "./src/external/*"
      ]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
